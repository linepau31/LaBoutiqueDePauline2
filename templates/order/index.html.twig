{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - La Boutique De Pauline{% endblock %}

{% block content %}

    <h2>Passer la commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande sur La Boutique De Pauline</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
            {{ form(form) }}
            {% endset %}

            {{ formHtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Récapétulatif de la commande</b><br>
                <p>Retrouvez le récapitulatif de vos produits</p>
            </div>
                <div class="order-summary">
                    {% for product in cart %}
                        <div class="row {% if key > 0 %}mt-2{% endif %}">
                            <div class="col-2">
                                <img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                            </div>
                            <div class="col-8 my-auto">
                                {{ product.product.name }}<br>
                                <small>{{ product.product.subtitle }}</small>
                            </div>
                            <div class="col-2 my-auto">
                                x {{ product.quantity }}
                            </div>
                        </div>
                    {% endfor%}
                </div>
        </div>
    </div>

{% endblock %}
